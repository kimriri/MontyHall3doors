<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/firstQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:padding="10dp"
        android:text="@string/Main_first"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/SecondQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:padding="10dp"
        android:text="@string/Main_second"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_door1_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goat_64"
        app:layout_constraintBottom_toBottomOf="@+id/door0"
        app:layout_constraintEnd_toEndOf="@+id/door0"
        app:layout_constraintStart_toStartOf="@+id/door0"
        app:layout_constraintTop_toTopOf="@+id/door0" />

    <ImageView
        android:id="@+id/img_door2_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goat_64"
        app:layout_constraintBottom_toBottomOf="@+id/door1"
        app:layout_constraintEnd_toEndOf="@+id/door1"
        app:layout_constraintStart_toStartOf="@+id/door1"
        app:layout_constraintTop_toTopOf="@+id/door1" />

    <ImageView
        android:id="@+id/img_door3_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goat_64"
        app:layout_constraintBottom_toBottomOf="@+id/door2"
        app:layout_constraintEnd_toEndOf="@+id/door2"
        app:layout_constraintStart_toStartOf="@+id/door2"
        app:layout_constraintTop_toTopOf="@+id/door2" />



    <ImageView
        android:id="@+id/door0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/closed_door_128bit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/door1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/door1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/closed_door_128bit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <ImageView
        android:id="@+id/door2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/closed_door_128bit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/door1"
        app:layout_constraintTop_toTopOf="parent" />




    <ImageView
        android:id="@+id/Selection0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/circle_check64"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/img_door1_back"
        app:layout_constraintStart_toStartOf="@+id/img_door1_back"
        app:layout_constraintTop_toBottomOf="@+id/door0" />

    <ImageView
        android:id="@+id/Selection1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/circle_check64"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/img_door2_back"
        app:layout_constraintStart_toStartOf="@+id/img_door2_back"
        app:layout_constraintTop_toBottomOf="@+id/door1" />

    <ImageView
        android:id="@+id/Selection2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/circle_check64"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/img_door3_back"
        app:layout_constraintStart_toStartOf="@+id/img_door3_back"
        app:layout_constraintTop_toBottomOf="@+id/door2" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="36dp"
        android:text="@string/Main_next_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btn_restart"
        android:layout_width="148dp"
        android:layout_height="49dp"
        android:visibility="gone"
        android:text="@string/Main_restart_btn"
        app:layout_constraintBottom_toBottomOf="@+id/btn_next"
        app:layout_constraintEnd_toStartOf="@+id/img_door2_back"
        app:layout_constraintStart_toStartOf="@+id/img_door1_back" />

    <Button
        android:id="@+id/btn_view_results"
        android:layout_width="148dp"
        android:layout_height="49dp"
        android:visibility="gone"
        android:text="@string/Main_view_results_btn"
        app:layout_constraintBottom_toBottomOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="@+id/img_door3_back"
        app:layout_constraintStart_toEndOf="@+id/img_door2_back" />

</androidx.constraintlayout.widget.ConstraintLayout>